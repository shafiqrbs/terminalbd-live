{% extends '::base-report.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-12 print-bar">
            <form name="searchForm" id="searchForm" action="{{ path('miss_marketing_executive_report_ajax_load') }}" method="post">
                <div class="grid-container">
                    <div class="grid-item">
                        <label>Start Date</label><br/>
                        <input type="date" class="m-wrap datepicker" required="required"  id="startDate" name="startDate" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}">
                    </div>
                    <div class="grid-item">
                        <label>End Date</label><br/>
                        <input type="date" class="m-wrap datepicker span8 m-wrap" required="required"  id="endDate" name="endDate" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}">
                    </div>
                    <div class="grid-item">
                        <div class="col-md-4 margin-top-15" >
                            <button type="button" class='btn btn-download btn-margin-left ajax-btn' value="search" name="submit" ><i class='fa fa-search'></i></button>
                            <button class="btn purple" onclick="exportExcel()" type="button"><i class="fa fa-file"></i></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="loader loader-double" ></div>
    <div id="print-area">
        <div class="row print-header">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <p><strong style="font-size:18px">{{ option.name }}</strong></p>
                <p><strong>Name of Report: Executive Sales Report</strong></p>
            </div>
            <div class="col-md-4 text-right">Printed: {{ "now"|date('d-m-Y') }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table even" border="1">
                    <thead class="flip-content ">
                        <tr class="head-green">
                            <th>S/N</th>
                            <th>Marketing Officer</th>
                            <th class="text-right">Sales</th>
                            <th class="text-right">Discount</th>
                            <th class="text-right">Net Sales</th>
                            <th class="text-right">Collection</th>
                            <th class="text-right">Balance</th>
                            <th class="text-right"></th>
                        </tr>
                    </thead>
                    <tbody id="data-load"></tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}




